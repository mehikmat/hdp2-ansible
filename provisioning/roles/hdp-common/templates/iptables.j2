# Firewall configuration written by system-config-firewall
# Manual customization of this file is not recommended_
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
{% if 'namenodes' in group_names %}
-A INPUT -p tcp --dport {{ hadoop['FS_DEFAULT_FS_PORT'] }} -j ACCEPT
-A INPUT -p tcp --dport {{ hadoop['DFS_NAMENODE_HTTP_ADDR_PORT'] }} -j ACCEPT
{% endif %}

{% if 'datanodes' in group_names %}
-A INPUT -p tcp --dport {{ hadoop['DFS_DATANODE_ADDR_PORT'] }} -j ACCEPT
-A INPUT -p tcp --dport {{ hadoop['DFS_DATANODE_HTTP_ADDR_PORT'] }} -j ACCEPT
-A INPUT -p tcp --dport {{ hadoop['DFS_DATANODE_IPC_ADDR_PORT'] }} -j ACCEPT
{% endif %}

-A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 22 -j ACCEPT
-A INPUT -j REJECT --reject-with icmp-host-prohibited
-A FORWARD -j REJECT --reject-with icmp-host-prohibited
COMMIT